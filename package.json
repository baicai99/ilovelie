{
  "name": "ilovelie",
  "displayName": "我爱撒谎",
  "description": "一个可以对代码注释撒谎的VS Code插件，让代码只有你可以维护！",
  "version": "1.1.0",
  "publisher": "baicai99",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/baicai99/ilovelie.git"
  },
  "bugs": {
    "url": "https://github.com/baicai99/ilovelie/issues"
  },
  "homepage": "https://github.com/baicai99/ilovelie#readme",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "comments",
    "lie",
    "obfuscation",
    "code-protection"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ilovelie.replaceComment",
        "title": "手动替换注释",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.replaceSelectedComment",
        "title": "手动替换",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.dictionaryReplaceComments",
        "title": "批量-字典替换注释",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.selectiveDictionaryReplace",
        "title": "多选-字典替换",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.smartReplaceComment",
        "title": "智能注释替换",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.smartDictionaryReplace",
        "title": "智能字典替换",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.scanComments",
        "title": "扫描注释",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.showCommentStatistics",
        "title": "注释统计",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.toggleCommentVisibility",
        "title": "切换注释显示/隐藏",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.aiReplaceSelectedComment",
        "title": "AI替换选中注释",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.aiBatchReplaceComments",
        "title": "批量-AI替换注释",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.aiSelectiveReplaceComments",
        "title": "多选-AI替换",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.showHistory",
        "title": "查看撒谎历史",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.restoreFromHistory",
        "title": "从历史中还原",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.clearAllHistory",
        "title": "清除所有历史",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.configureAI",
        "title": "🤖 打开AI配置中心",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.toggleTruthState",
        "title": "🔄 切换真话/假话",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.showCurrentStatus",
        "title": "📊 显示当前状态",
        "category": "我爱撒谎"
      }
    ],
    "submenus": [
      {
        "id": "ilovelie.history",
        "label": "历史",
        "icon": "$(history)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ilovelie.replaceSelectedComment",
          "group": "z_ilovelie@1"
        },
        {
          "command": "ilovelie.aiReplaceSelectedComment",
          "group": "z_ilovelie@2"
        },
        {
          "command": "ilovelie.dictionaryReplaceComments",
          "group": "z_ilovelie@5"
        },
        {
          "command": "ilovelie.selectiveDictionaryReplace",
          "group": "z_ilovelie@6"
        },
        {
          "command": "ilovelie.smartReplaceComment",
          "group": "z_ilovelie@7"
        },
        {
          "command": "ilovelie.smartDictionaryReplace",
          "group": "z_ilovelie@8"
        },
        {
          "command": "ilovelie.aiBatchReplaceComments",
          "group": "z_ilovelie@9"
        },
        {
          "command": "ilovelie.aiSelectiveReplaceComments",
          "group": "z_ilovelie@10"
        },
        {
          "command": "ilovelie.scanComments",
          "group": "z_ilovelie@11"
        },
        {
          "command": "ilovelie.showCommentStatistics",
          "group": "z_ilovelie@12"
        },
        {
          "command": "ilovelie.toggleCommentVisibility",
          "group": "z_ilovelie@13"
        },
        {
          "command": "ilovelie.toggleTruthState",
          "group": "z_ilovelie@14"
        },
        {
          "command": "ilovelie.showCurrentStatus",
          "group": "z_ilovelie@15"
        },
        {
          "submenu": "ilovelie.history",
          "group": "z_ilovelie@16"
        },
        {
          "command": "ilovelie.configureAI",
          "group": "z_ilovelie@16"
        }
      ],
      "ilovelie.history": [
        {
          "command": "ilovelie.showHistory",
          "group": "history@1"
        },
        {
          "command": "ilovelie.restoreFromHistory",
          "group": "history@2"
        },
        {
          "command": "ilovelie.clearAllHistory",
          "group": "history@3"
        }
      ],
      "commandPalette": [
        {
          "command": "ilovelie.replaceComment"
        },
        {
          "command": "ilovelie.replaceSelectedComment"
        },
        {
          "command": "ilovelie.dictionaryReplaceComments"
        },
        {
          "command": "ilovelie.selectiveDictionaryReplace"
        },
        {
          "command": "ilovelie.showHistory"
        },
        {
          "command": "ilovelie.restoreFromHistory"
        },
        {
          "command": "ilovelie.clearAllHistory"
        },
        {
          "command": "ilovelie.toggleCommentVisibility"
        },
        {
          "command": "ilovelie.aiReplaceSelectedComment"
        },
        {
          "command": "ilovelie.aiBatchReplaceComments"
        },
        {
          "command": "ilovelie.aiSelectiveReplaceComments"
        },
        {
          "command": "ilovelie.configureAI"
        }
      ]
    },
    "configuration": {
      "title": "我爱撒谎",
      "properties": {
        "ilovelie.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key（用于AI撒谎功能）",
          "scope": "application"
        },
        "ilovelie.openaiBaseURL": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI API Base URL（支持代理或其他兼容服务）",
          "scope": "application"
        },
        "ilovelie.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "使用的OpenAI模型（如 gpt-4o-mini, gpt-4, gpt-3.5-turbo 等）",
          "scope": "application"
        }
      }
    },
    "keybindings": [
      {
        "command": "ilovelie.toggleCommentVisibility",
        "key": "ctrl+shift+h",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "openai": "^4.103.0"
  }
}