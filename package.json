{
  "name": "ilovelie",
  "displayName": "我爱撒谎",
  "description": "一个可以对代码注释撒谎的VS Code插件，让代码只有你可以维护！",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ilovelie.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ilovelie/issues"
  },
  "homepage": "https://github.com/yourusername/ilovelie#readme",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "comments",
    "lie",
    "obfuscation",
    "code-protection"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ilovelie.replaceComment",
        "title": "手动替换注释",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.replaceSelectedComment",
        "title": "替换选中的注释",
        "category": "我爱撒谎"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ilovelie.replaceSelectedComment",
          "when": "editorHasSelection",
          "group": "1_modification@1"
        }
      ],
      "commandPalette": [
        {
          "command": "ilovelie.replaceComment"
        },
        {
          "command": "ilovelie.replaceSelectedComment",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}