{
  "name": "ilovelie",
  "displayName": "我爱撒谎",
  "description": "一个可以对代码注释撒谎的VS Code插件，让代码只有你可以维护！",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ilovelie.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ilovelie/issues"
  },
  "homepage": "https://github.com/yourusername/ilovelie#readme",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "comments",
    "lie",
    "obfuscation",
    "code-protection"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ilovelie.replaceComment",
        "title": "手动替换注释",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.replaceSelectedComment",
        "title": "手动替换",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.dictionaryReplaceComments",
        "title": "批量-字典替换注释",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.selectiveDictionaryReplace",
        "title": "字典替换",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.undoLastChange",
        "title": "撤销上次撒谎",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.showHistory",
        "title": "查看撒谎历史",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.restoreFromHistory",
        "title": "从历史中还原",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.clearAllHistory",
        "title": "清除所有历史",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.toggleTruthLieState",
        "title": "切换真话/撒谎状态",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.temporarilyRestoreAllLies",
        "title": "临时还原真话",
        "category": "我爱撒谎"
      },
      {
        "command": "ilovelie.manuallyRestoreLies",
        "title": "恢复撒谎",
        "category": "我爱撒谎"
      }
    ],
    "submenus": [
      {
        "id": "ilovelie.history",
        "label": "历史",
        "icon": "$(history)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ilovelie.replaceSelectedComment",
          "group": "z_ilovelie@1"
        },
        {
          "command": "ilovelie.dictionaryReplaceComments",
          "group": "z_ilovelie@2"
        },
        {
          "command": "ilovelie.selectiveDictionaryReplace",
          "group": "z_ilovelie@3"
        },
        {
          "command": "ilovelie.undoLastChange",
          "group": "z_ilovelie@4"
        },
        {
          "submenu": "ilovelie.history",
          "group": "z_ilovelie@5"
        },
        {
          "command": "ilovelie.toggleTruthLieState",
          "group": "z_ilovelie@6"
        }
      ],
      "ilovelie.history": [
        {
          "command": "ilovelie.showHistory",
          "group": "history@1"
        },
        {
          "command": "ilovelie.restoreFromHistory",
          "group": "history@2"
        },
        {
          "command": "ilovelie.clearAllHistory",
          "group": "history@3"
        }
      ],
      "commandPalette": [
        {
          "command": "ilovelie.replaceComment"
        },
        {
          "command": "ilovelie.replaceSelectedComment"
        },
        {
          "command": "ilovelie.dictionaryReplaceComments"
        },
        {
          "command": "ilovelie.selectiveDictionaryReplace"
        },
        {
          "command": "ilovelie.undoLastChange"
        },
        {
          "command": "ilovelie.showHistory"
        },
        {
          "command": "ilovelie.restoreFromHistory"
        },
        {
          "command": "ilovelie.clearAllHistory"
        },
        {
          "command": "ilovelie.toggleTruthLieState"
        },
        {
          "command": "ilovelie.temporarilyRestoreAllLies"
        },
        {
          "command": "ilovelie.manuallyRestoreLies"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ilovelie.toggleTruthLieState",
        "key": "ctrl+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "ilovelie.temporarilyRestoreAllLies",
        "key": "ctrl+shift+alt+t",
        "when": "editorTextFocus"
      },
      {
        "command": "ilovelie.manuallyRestoreLies",
        "key": "ctrl+shift+r",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}